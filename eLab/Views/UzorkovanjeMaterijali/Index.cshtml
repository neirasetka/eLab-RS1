@model IEnumerable<eLab.Models.UzorkovanjeMaterijali>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Dodaj novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th style="background-color:rosybrown">
                @Html.DisplayNameFor(model => model.Uzorkovanje)
            </th>
            <th style="background-color:rosybrown">
                @Html.DisplayNameFor(model => model.Materijali)
            </th>
            <th style="background-color:rosybrown"></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Uzorkovanje.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Materijali.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Uredi</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalji</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Obriši</a>
            </td>
        </tr>
}
    </tbody>
</table>
