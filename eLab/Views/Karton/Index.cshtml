@model IEnumerable<eLab.Models.Karton>

@{
    ViewData["Title"] = "Index";
}

<h1>Kartoni</h1>

<p>
    <a asp-action="Create">Dodaj novi</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th style="background-color:lightgreen">
                @Html.DisplayNameFor(model => model.DateCreated)
            </th>
            <th style="background-color:lightgreen">
                @Html.DisplayNameFor(model => model.DateUpdated)
            </th>
            <th style="background-color:lightgreen">
                @Html.DisplayNameFor(model => model.Timestamp)
            </th>
            <th style="background-color:lightgreen">
                @Html.DisplayNameFor(model => model.Allergies)
            </th>
            <th style="background-color:lightgreen">
                @Html.DisplayNameFor(model => model.Anamnesis)
            </th>
            <th style="background-color:lightgreen">
                @Html.DisplayNameFor(model => model.Height)
            </th>
            <th style="background-color:lightgreen">
                @Html.DisplayNameFor(model => model.Weight)
            </th>
            <th style="background-color:lightgreen"></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateUpdated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Timestamp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Allergies)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Anamnesis)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Height)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weight)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Uredi</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalji</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Obriši</a>
            </td>
        </tr>
}
    </tbody>
</table>
